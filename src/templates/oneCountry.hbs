
{{#each this}}
<h2 class="country-name">{{name}}</h2>
<div>
    <ul class="country-info-list">
        <li class="country-info"><b>Capital:</b> {{capital}} </li>
        <li class="country-info"><b>Population:</b> {{population}} </li>
        <ul class="country-info languages"> <b>Languages:</b>
            {{#each languages}}
            <li class="language">{{name}}</li>
            {{/each}}
        </ul>
    </ul>

    <img class="country-flag" src="{{flag}}" alt="flag" width="400"> 

</div>

{{/each}}
